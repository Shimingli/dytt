<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.yanweijia.dytt.IntroActivity">
    <!--占位-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="15dip"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dip"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_introimg1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
            <TextView
                android:id="@+id/textView_intro"
                android:textSize="16sp"
                android:textColor="@color/introTextColor"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:layout_marginRight="10dip"
                android:layout_gravity="center_horizontal"
                android:text="@string/movieIntroContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
            <ImageView
                android:id="@+id/imageView_introimg2"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
            <!--放广告的layout-->
            <LinearLayout
                android:id="@+id/linearLayout_introAd"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
            <!--下载地址-->
            <TextView
                android:id="@+id/textView_intro_downloadLink"
                android:textColor="@color/downloadTextColor"
                android:textSize="16sp"
                android:text="@string/downloadURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingEnd="10.0dip"
                android:paddingRight="10.0dip"
                android:background="@drawable/textview_border"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
            <!--下载说明-->
            <TextView
                android:textSize="16sp"
                android:text="@string/downloadInstruction"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip"/>
        </LinearLayout>

    </ScrollView>
    <!--下面这个布局是为了防止Snackbar覆盖FloatingActionButton,Snackbar显示后button自动往上浮动-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginEnd="10dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/download" />
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
